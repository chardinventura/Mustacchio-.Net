<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mustacchio</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container justify-content-center">
            <img src="@Url.Content("/Images/logo.jpg")" />
        </div>
        <div class="container d-flex justify-content-center margin-custom">
            <div class="navbar-header">
                <ul class="nav navbar navbar-collapse font-weight-bold">
                    <li class="px-3">@Html.ActionLink("INICIO", "Index", "Home", new {style="text-decoration:none; color: lightseagreen;"})</li>
                    <li class="px-3">@Html.ActionLink("NOSOTROS", "Nosotros", "Home", new {style="text-decoration:none; color: black;"})</li>
                    <li class="px-3">@Html.ActionLink("GALERIA", "Galeria", "Home", new {style="text-decoration:none; color: black;"})</li>
                    <li class="px-3">@Html.ActionLink("BLOG", "Blog", "Home", new {style="text-decoration:none; color: black;"})</li>
                    <li class="px-3">@Html.ActionLink("CONTACTO", "Contacto", "Home", new {style="text-decoration:none; color: black;"})</li>
                </ul>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
        <footer class="d-flex align-items-center footer-custom">

            <div class="div-copy">
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </div>

            <div class="contenedor-icons">
                <img src="@Url.Content("/Images/icons/icon-twitter.jpg")" />
                <img src="@Url.Content("/Images/icons/icon-facebook.jpg")" />
                <img src="@Url.Content("/Images/icons/icon-googleplus.jpg")" />
                <img src="@Url.Content("/Images/icons/icon-pinterest.jpg")" />
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
